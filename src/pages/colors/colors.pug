include ~components/ColorBox/ColorBox 

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Colors & Type
  body
    h1 Colors & Type
    a(href="index.html") pages
    +ColorBox('Dark Shade 100%', '#1F2041', 'dark100')
